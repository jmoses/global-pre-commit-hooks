{
  "default_install_hook_types": [
    "pre-push"
  ],
  "repos": [
    {
      "repo": "https://github.com/pre-commit/pre-commit-hooks",
      "rev": "v3.2.0",
      "hooks": [
        {
          "id": "trailing-whitespace",
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "end-of-file-fixer",
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "check-yaml",
          "args": [
            "--allow-multiple-documents"
          ],
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "check-added-large-files",
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "check-json",
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "check-merge-conflict",
          "stages": [
            "pre-push"
          ]
        }
      ]
    },
    {
      "repo": "https://github.com/codespell-project/codespell",
      "rev": "v2.2.4",
      "hooks": [
        {
          "id": "codespell",
          "stages": [
            "pre-push"
          ],
          "exclude": "package-lock\\.json"
        }
      ]
    },
    {
      "repo": "local",
      "hooks": [
        {
          "id": "node-lint",
          "name": "node-lint",
          "entry": "$this/scripts/node/npm-task-if-exists.sh",
          "args": [
            "lint"
          ],
          "language": "script",
          "types_or": [
            "javascript",
            "ts"
          ],
          "pass_filenames": false,
          "verbose": true,
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "node-commitlint",
          "name": "node-commitlint",
          "entry": "$this/scripts/node/npm-task-if-exists.sh",
          "args": [
            "commitlint"
          ],
          "language": "script",
          "always_run": true,
          "pass_filenames": false,
          "stages": [
            "pre-push"
          ]
        },
        {
          "id": "local-repo-hook",
          "name": "local-repo-hook",
          "entry": "$this/scripts/local-scripts.sh",
          "language": "script",
          "always_run": true,
          "pass_filenames": false,
          "stages": [
            "pre-push",
            "pre-commit"
          ]
        }
      ]
    }
  ]
}
